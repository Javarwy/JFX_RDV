<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="appli.accueil.LoginController">

  <Label fx:id="welcomeText" text="Bienvenue !" />
  <Label fx:id="emailText" text="Votre email :" />
  <TextField fx:id="emailField">
  </TextField>
  <Label fx:id="passwordText" text="Votre mot de passe :" />
  <PasswordField fx:id="passwordField">
  </PasswordField>
  <Label fx:id="erreur" text="Erreur" textFill="RED" visible="false" />
  <Button onAction="#connexion" text="Se connecter" />
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
      <Button onAction="#inscription" text="Pas de compte ? Cliquez ici" />
      </children>
   </HBox>
</VBox>
