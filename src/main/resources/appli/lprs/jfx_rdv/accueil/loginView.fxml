<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="appli.lprs.jfx_rdv.accueil.LoginController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label fx:id="welcomeText" text="Bienvenue !">
    <font>
      <Font size="24.0" />
    </font></Label>
  <Label fx:id="emailText" text="Votre email :">
  <font>
    <Font size="14.0" />
  </font></Label>
  <TextField fx:id="emailField">
    <font>
      <Font size="10.0" />
    </font>
  </TextField>
  <Label fx:id="passwordText" text="Votre mot de passe :">
    <font>
      <Font size="14.0" />
    </font></Label>
  <PasswordField fx:id="passwordField">
    <font>
      <Font size="10.0" />
    </font>
  </PasswordField>
  <Label fx:id="erreur" text="Erreur" textFill="RED" visible="false" />
  <Button text="Connexion" onAction="#connexion"/>
</VBox>
